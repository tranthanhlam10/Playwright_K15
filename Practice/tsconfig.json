{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/**/*",
    "types/**/*",
    "jest.d.ts",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules", "dist"],

  "files": [
    "jest.d.ts", "jest.setup.ts"
  ]
}
