{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "./src/types", "./index.d.ts"],
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/**/*",
    "types/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules" // Không biên dịch node_modules
  ],

  "files": [
    "index.d.ts"
    //"tests/BrandContributionTest.spec.ts"
  ]
}
